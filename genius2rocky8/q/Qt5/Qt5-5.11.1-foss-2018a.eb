dependencies = [
    ('GLib', '2.54.3','',('GCCcore', '6.4.0')),
    ('libpng', '1.6.34','',('GCCcore', '6.4.0')),
    ('X11', '20180131','',('GCCcore', '6.4.0')),
#    ('libGLU', '9.0.0','',('X11','20180604')),
   ('libGLU', '9.0.0'),
