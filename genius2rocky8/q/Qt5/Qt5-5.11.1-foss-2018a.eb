patches = ['Qt5-5.11.1_glibc-fix.patch']
checksums = [
    {'qt-everywhere-src-5.11.1.tar.xz': '39602cb08f9c96867910c375d783eed00fc4a244bffaa93b801225d17950fb2b'},
    {'Qt5-5.11.1_glibc-fix.patch': 'cb5f46f49236e96c758a7b457bbf47d196592ea59ba7bdb45587ce36d920b32d'},
]

