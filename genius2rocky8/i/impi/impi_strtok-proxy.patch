diff -ruN orig/strtok_proxy.c new/strtok_proxy.c
--- orig/strtok_proxy.c	1970-01-01 01:00:00.000000000 +0100
+++ new/strtok_proxy.c	2023-06-09 13:33:31.231092000 +0200
@@ -0,0 +1,24 @@
+#define _GNU_SOURCE 1
+
+#include <string.h>
+#include <dlfcn.h>
+
+typedef char *(*strtok_t) (char *str, const char *delimiters);
+static strtok_t strtok_orig_p = NULL;
+
+char *strtok(char *str, const char *delimiters)
+{
+
+    if (strtok_orig_p == NULL) {
+        strtok_orig_p = (strtok_t) dlsym(RTLD_NEXT, "strtok");
+        if (strtok_orig_p == NULL) {
+            /* Error handling */
+            return NULL;
+        }
+        if (str == NULL) {
+            str = "";
+        }
+    }
+
+    return strtok_orig_p(str, delimiters);
+}
